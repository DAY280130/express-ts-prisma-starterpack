{
  "name": "express-ts-prisma-starterpack",
  "version": "0.0.2",
  "description": "dimas's express, ts, and prisma project starterpack",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsx ./src/index.ts",
    "dev:watch": "npx tsx watch ./src/index.ts",
    "build:local": "ttsc -p tsconfig.prod.json",
    "generate-package": "touch ./dist/package.json && echo {\"type\": \"module\"} > ./dist/package.json && node ./dist/PackageJSONGenerator.js",
    "copy": "cp .env.example ./dist/.env.example && cp -r prisma ./dist/prisma",
    "clean": "npx rimraf ./dist",
    "build": "npm run build:local",
    "postbuild": "npm run generate-package && npm run copy && cd ./dist && npm install && npx prisma generate && cd ..",
    "start": "node ./dist/index.js"
  },
  "author": "Dimas Adnan",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "prisma": "^4.11.0",
    "zod": "^3.21.4"
  }
}
